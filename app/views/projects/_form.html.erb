<%= form_with(model: project, local: true, class: 'needs-validation', data: { turbo: false }) do |form| %>
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title mb-4"><%= project.new_record? ? "New Project" : "Editing Project" %></h2>

      <% if project.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading"><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h4>
          <ul class="mb-0">
            <% project.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: "form-label" %>
        <%= form.rich_text_area :description, class: "trix-content", required: true %>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= form.label :start_date, class: "form-label" %>
          <%= form.date_field :start_date, class: "form-control", required: true %>
        </div>
        <div class="col-md-6 mb-3">
          <%= form.label :end_date, class: "form-label" %>
          <%= form.date_field :end_date, class: "form-control", required: true %>
        </div>
      </div>

      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <%= link_to "Cancel", projects_path, class: "btn btn-outline-secondary me-md-2" %>
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>